---
import Layout from "../layouts/Layout.astro";
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "../components/ui/card";
import { UpdatePasswordForm } from "../components/auth/UpdatePasswordForm";

// This page is accessed via email link with recovery token
// Token validation will be handled by Supabase in the next phase
---

<Layout title="Zmień hasło - GymMate">
  <div class="min-h-screen flex items-center justify-center px-4 py-12 bg-gradient-to-br from-background to-muted/20">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight">GymMate</h1>
        <p class="text-muted-foreground mt-2">Twój osobisty trener w kieszeni</p>
      </div>

      <Card>
        <CardHeader>
          <CardTitle>Ustaw nowe hasło</CardTitle>
          <CardDescription>
            Wprowadź nowe hasło dla swojego konta
          </CardDescription>
        </CardHeader>
        <CardContent>
          <UpdatePasswordForm client:load />
        </CardContent>
      </Card>
    </div>
  </div>
</Layout>

